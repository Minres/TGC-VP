{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FW",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fw/hello-world/prebuilt/hello.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:10000",
            "miDebuggerPath": "/usr/local/bin/riscv32-unknown-elf-gdb",
	        "autorun": [
                "symbol-file ${workspaceFolder}/fw/hello-world/prebuilt/hello.elf",
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "TGC-VP",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/tgc-vp",
            "args": ["-f", "fw/hello-world/prebuilt/hello.elf"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "TGC-VP w. DebugServer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/tgc-vp",
            "args": ["-f", "fw/hello-world/prebuilt/hello.elf","-g","10000"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "compounds": [
        {
            "name": "FW-Debug",
            "configurations": ["TGC-VP w. DebugServer", "FW"]
        }
    ]
}